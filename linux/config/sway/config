# Default config for sway
#
# Copy this to ~/.config/sway/config and edit it to your li sway` for a complete reference.

### Variables
#pacman -S xorg-xmodmap
# xmodmap 
# control/shift/lock/mod1/mod4
# mod1=alt/meta
# mod4=cmd/win

# Spacekey   = Mod4+control = cmd+control
# Caplocks   =mod4+mod1     =cmd+alt
# Your preferred terminal emulator
# wget https://github.com/alacritty/alacritty/blob/master/extra/alacritty.info
# sudo tic -xe alacritty,alacritty-direct ./alacritty.info
# Your preferred application launcher
# Note: pass the final command to swaymsg so that the resulting window can be opened
# on the original workspace that the command was run on.
set $menu   bemenu-run -i   --fn 'Sarasa Term SC Nerd 30' --hp 5 -W 0.5  -p run: --fb "#1e1e2e" --ff "#00ffff" --nb "#1e1e2e" --nf "#f5e0dc" --tb "#1e1e2e" --hb "#1e1e2e" --hf "#00ffff" --tf "#f5e0dc" --af "#f5e0dc" --ab "#1e1e2e"  -l 10 -n |xargs swagmsg exec --

# Default wallpaper (more resolutions are available in /usr/share/backgrounds/sway/)
output * bg /usr/share/backgrounds/sway/Sway_Wallpaper_Blue_1920x1080.png fill
# You can get the names of your outputs by running: swaymsg -t get_outputs
#   output HDMI-A-1 resolution 1920x1080 position 1920,0

exec swayidle -w \
         timeout 300 'swaylock -f -c 000000' \
         timeout 600 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
         before-sleep 'swaylock -f -c 000000'
         
bindsym mod4+control+8 exec swaylock --ignore-empty-password --show-failed-attempts \
--color 1e1e1e --inside-color cccccc --ring-color ffffff \
--inside-clear-color 11a8cd --ring-clear-color 29b8db \
--inside-ver-color 2472c8 --ring-ver-color 3b8eea \
--inside-wrong-color cd3131 --ring-wrong-color f14c4c

bindsym --no-repeat mod4+control+e exec $HOME/bin/sway-run-or-raise.sh emacs emacsclient -c -r -n
bindsym --no-repeat mod4+control+f exec $HOME/bin/sway-run-or-raise.sh google-chrome google-chrome-stable 
bindsym --no-repeat mod4+control+d exec $HOME/bin/sway-run-or-raise.sh dropdown-term foot --term=xterm-256color  --app-id=dropdown-term -w 900x500 
bindsym --no-repeat mod4+control+b exec $HOME/bin/sway-run-or-raise.sh weixin weixin-uos 2>&1 >/dev/null
bindsym --no-repeat mod4+control+3 exec $HOME/bin/sway-run-or-raise.sh Bytedance-feishu bytedance-feishu-stable  2>&1 >/dev/null

bindsym --no-repeat mod4+control+Return fullscreen disable, exec foot

# Start your launcher
bindsym mod4+mod1+r exec $menu
bindsym mod4+mod1+d exec $menu
bindsym mod4+control+q kill
bindsym mod4+control+period kill

# Drag floating windows by holding down mod4+mod1 and left mouse button.
# Resize them with right mouse button + mod4+mod1.
# Despite the name, also works for non-floating windows.
# Change normal to inverse to use left mouse button for resizing and right
# mouse button for dragging.
floating_modifier control normal

# Reload the configuration file
bindsym mod4+mod1+c reload
bindsym mod4+mod1+control+c reload

# Exit sway (logs you out of your Wayland session)
bindsym mod4+mod1+q exec swaymsg exit
#
# Moving around:
#
# Move the focused window with the same, but add control
#
# Workspaces:
#
# 左右滑
bindgesture swipe:4:right workspace prev
bindgesture swipe:4:left workspace next

# 捏
bindgesture pinch:inward+up move up
bindgesture pinch:inward+down move down
bindgesture pinch:inward+left move left
bindgesture pinch:inward+right move right

bindsym mod4+mod1+i splith
bindsym mod4+mod1+v splitv

# bindsym mod4+mod1+t layout tabbed
bindsym mod4+mod1+t layout toggle split

bindsym mod4+mod1+f floating toggle
# Move the currently focused window to the scratchpad
bindsym mod4+mod1+h move scratchpad
bindsym mod4+mod1+control+h scratchpad show
bindsym XF86MonBrightnessDown exec light -U 5
bindsym XF86MonBrightnessUp exec light -A 5
bindsym XF86AudioRaiseVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+
bindsym XF86AudioLowerVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-

    # wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle #microphone
bindsym XF86AudioMute exec wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle

bindsym mod4+control+o    exec $HOME/bin/swayr next-window current-workspace,mode "default"
set $space_m_map  "hjklo:focus,HJKL:swap,ui:parent-child wersdfxcv:9pos,1:tag,+-C-+-:grow/shrink"  
mode $space_m_map {
    bindsym mod4+control+m fullscreen,mode "default"
    bindsym Left focus left,mode "default"
    bindsym Right focus right,mode "default"
    bindsym Down focus down,mode "default"
    bindsym Up focus up,mode "default"
    bindsym u focus parent,mode "default"
    bindsym i focus child,mode "default"
    bindsym o exec $HOME/bin/swayr next-window current-workspace,mode "default"
    bindsym mod4+control+o    exec $HOME/bin/swayr next-window current-workspace,mode "default"
    
    bindsym equal resize grow width 15px
    bindsym minus resize shrink width 15px
    bindsym shift+equal resize grow height 15px
    bindsym shift+minus resize shrink height 15px
    bindsym control+equal resize grow height 15px
    bindsym control+minus resize shrink height 15px
    
     # swap with other container
    bindsym h mark --add "_swap", focus left, swap container with mark "_swap", focus left, unmark "_swap" ,mode "default"
    bindsym j mark --add "_swap", focus down, swap container with mark "_swap", focus down, unmark "_swap" , mode "default"
    bindsym k mark --add "_swap", focus up, swap container with mark "_swap", focus up, unmark "_swap" ,mode "default"
    bindsym l mark --add "_swap", focus right, swap container with mark "_swap", focus right, unmark "_swap" ,mode "default"
    bindsym control+s move left,mode "default"
    bindsym control+d move down,mode "default"
    bindsym control+e move up,mode "default"
    bindsym control+f move right,mode "default"
    

    # these reflect the position on the keyboard:
    # w e r
    # s d f
    # x c v
    bindsym w     exec $HOME/bin/sway-move-to top-left,mode "default"
    bindsym e     exec $HOME/bin/sway-move-to mid-top,mode "default"
    bindsym r     exec $HOME/bin/sway-move-to top-right,mode "default"
    bindsym s     exec $HOME/bin/sway-move-to mid-left,mode "default"
    bindsym d     exec $HOME/bin/sway-move-to centre,mode "default"
    bindsym f     exec $HOME/bin/sway-move-to mid-right,mode "default"
    bindsym x     exec $HOME/bin/sway-move-to bottom-left,mode "default"
    bindsym c     exec $HOME/bin/sway-move-to mid-bottom,mode "default"
    bindsym v     exec $HOME/bin/sway-move-to bottom-right ,mode "default"

    # move window no next empty
    bindsym mod4+control+j    exec sway-next-empty-workspace --take-focused,mode "default"
    # bindsym p       exec sway-next-empty-workspace --reverse --take-focused
    bindsym mod4+control+h    exec $HOME/bin/sway-move-to-prev-workspace,mode "default"
    bindsym mod4+control+l    exec $HOME/bin/sway-move-to-next-workspace,mode "default"
    
    
    bindsym mod4+control+n       workspace next,mode "default"
    bindsym mod4+control+p       workspace prev,mode "default"
    bindsym 1 workspace number 1,mode "default"
    bindsym 2 workspace number 2,mode "default"
    bindsym 3 workspace number 3,mode "default"
    bindsym 4 workspace number 4,mode "default"
    bindsym 5 workspace number 5,mode "default"
    bindsym 6 workspace number 6,mode "default"
    bindsym 7 workspace number 7,mode "default"
    bindsym 8 workspace number 8,mode "default"
    bindsym 9 workspace number 9,mode "default"
    bindsym 0 workspace number 10,mode "default"

    # Return to default mode
    bindsym Escape mode "default"
    bindsym control+g mode "default"
    bindsym Space mode "default"
}
bindsym mod4+control+m mode $space_m_map
        
include /etc/sway/config.d/*
include $HOME/.config/sway/sway.d/*.conf
#  Local Variables:
#  mode: conf
#  eval: (add-hook (make-local-variable 'after-save-hook) #'(lambda()(shell-command "make")) t)
#  End:
