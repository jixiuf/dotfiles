#!/bin/bash
# kill xremap
sudo -E -u jixiuf /bin/systemctl --user stop xremap 2>&1 >>/tmp/a
sudo -E -u jixiuf /bin/systemctl --user stop ydotool
sudo -E -u jixiuf /bin/systemctl --user stop udevmon
# /usr/bin/sleep 2
sudo -E -u jixiuf /bin/systemctl --user start udevmon
/usr/bin/sleep 0.5
sudo -E -u jixiuf /bin/systemctl --user start xremap
/usr/bin/sleep 0.5
sudo -E -u jixiuf /bin/systemctl --user start ydotool
sudo -E -u jixiuf /usr/bin/touch /tmp/test2
