! !!!将Capslk变成Ctrl  Ctrl变成Alt alt变成capslk        
! !!remove原来的绑定
! remove Lock      =  Caps_Lock
! remove Mod1      =  Alt_L
! remove Control   =  Control_L
! !!交换三个键位
! keysym Alt_L     =  Caps_Lock
! keysym Caps_Lock =  Control_L
! keysym Control_L =  Alt_L
! !!!重新绑定三个键
! add   Lock       =  Caps_Lock
! add   Mod1       =  Alt_L
! add   Control    =  Control_L

!交换Cap Control
remove Lock = Caps_Lock
remove Control = Control_L
remove mod1 = Alt_L
keysym Control_L = Caps_Lock
keysym Caps_Lock =Alt_L
keysym Alt_L =Control_L
add Lock = Caps_Lock
add Control = Control_L
add mod1 = Alt_L


